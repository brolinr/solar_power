    <div class="container col-xxl-8">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5 shadow-lg mt-4">
            <div class="col-10 col-sm-8 col-lg-6">
                <%= image_tag "geyser5.jpg", class: "img-fluid", alt: "Solar geyser" %>
            </div>
            <div class="col-lg-6">
            <h1 class="display-4 fw-bold lh-1"> 
                    <span class="text-warning">Our</span>
